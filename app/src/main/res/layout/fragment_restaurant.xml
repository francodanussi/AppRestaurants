<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diagnostifo.integradordanussioctubre.FragmentRestaurant">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imagenRestaurant"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="#bd1a1818">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombreRestaurant"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="#9d9845"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lugarRestaurant"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#bb3636"/>



    </LinearLayout>


</FrameLayout>
